<div class="modal-body p-0">    
	<iframe id="iframe" srcdoc="{{iframeContent}}" onload="resizeIframe(this)" style="display: block; width: 100%; height: 0"></iframe>
</div>

<script>
  function resizeIframe(iframe) {
    try {
	  setTimeout(() => {
		const innerDoc = iframe.contentDocument || iframe.contentWindow.document;
		iframe.style.height = innerDoc.body.scrollHeight + 'px';
	  }, 500)
    } catch (e) {
      console.error('Impossible de redimensionner l\'iframe : contenu cross-domain ?');
    }
  }
</script>