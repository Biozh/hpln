	<div class="col-12 bg-body rounded px-4 py-2">
		<div class="flex-between">
			<div class="flex-center">
				<a href="{{path('admin_index')}}"><img src="{{asset('assets/img/logo.svg')}}" alt="{{PROJECT_NAME}}" class="me-2 project-icon" height="42"></a>
