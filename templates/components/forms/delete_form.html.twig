{% set form_id = form_id|default('delete-form-' ~ random()) %}

<div class="modal-header">
	{% block header %}
		<div class="d-flex align-items-center justify-content-between w-100">
			<h4 class="card-head mb-0">{{ form_title|default('Confirmer la suppression') }}</h4>
			<div class="flex-between">
				<div role="button" class="text-decoration-none flex-center" type="button" data-bs-dismiss="modal" data-bs-toggle="tooltip" data-bs-title="Fermer" data-bs-placement="bottom">
					<span class="material-symbols-rounded fs-6">close</span>
				</div>
			</div>
		</div>
	{% endblock %}
</div>

<div class="modal-body">
	{% block body %}
		<form id="{{ form_id }}" method="post" action="{{ form_action }}">
			<input type="hidden" name="_token" value="{{ csrf_token(form_token) }}">
			<div class="card-body bg-body">
				{{ message|default('Voulez-vous vraiment effectuer cette suppression ? Cette action supprime toutes les données de manière irréversible.') }}
			</div>
		</form>
	{% endblock %}
</div>

<div class="modal-footer">
	{% block footer %}
		<button class="btn btn-dark me-2" type="submit" form="{{ form_id }}">Supprimer</button>
	{% endblock %}
</div>
